{
  "name": "boot-builder",
  "productName": "Boot Builder",
  "version": "0.0.1",
  "main": "dist-electron/main/index.js",
  "description": "An app to easily create bootable USB installers",
  "author": "Kyle Upton <kyleaupton@gmail.com>",
  "license": "GPL-3.0-or-later",
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:3344/"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "node scripts/build.mjs --build",
    "release": "node scripts/build.mjs --build --publish",
    "type-check": "vue-tsc --noEmit",
    "test-drives": "node scripts/test-drives.mjs",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps"
